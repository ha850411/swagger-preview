{
    "manifest_version": 3,
    "name": "Swagger Preview",
    "version": "1.2.1",
    "description": "透過 swagger 預覽 GitHub API",
    "icons": {
        "128": "swaggerIcon.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "128": "swaggerIcon.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "storage",
        "scripting",
        "activeTab",
        "webRequest"
    ],
    "host_permissions": [
        "<all_urls>"
    ]
}
